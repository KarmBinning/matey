<div class="card h-100">
  <div class="card-header">
    <h3 class="card-title">
      Active Users
    </h3>
  </div>
  <div class="card-body">
    <h1 class="card-title">
      <%= @current_period.to_s %>
    </h1>
    <p class="card-text">
      <%= (@change_active_number > 0 ? "+" : "") + @change_active_number.to_s + " / " + @change_active_percent.to_s + "%" %>
    </p>
    <small class="fst-italic">since <%= time_ago_in_words(@time_window.ago) %> ago</small>
  </div><!-- .card-body -->
</div><!-- .card -->
