<div class="card h-100">
  <div class="card-header">
    <h3 class="card-title">
      New Users
    </h3>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col">
        <h1><%= @current_period %></h1>
      </div>
      <div class="col-auto">
        <p class="card-text text-end mb-0">
          <%= (@change_new_number > 0 ? "+" : "") + @change_new_number.to_s + " / " + @change_new_percent.to_s + "%" %>
        </p>
      </div><!-- .col -->
    </div><!-- .row -->
    <small class="fst-italic">since <%= time_ago_in_words(@time_window.ago) %> ago</small>
  </div><!-- .card-body -->
</div><!-- .card -->
